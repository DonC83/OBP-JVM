<configuration debug="false">

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %-5level %d{HH:mm:ss.SSS} [%thread] %logger{30} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <appender name="terse" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.tesobe.obp" level="debug"/>
  <logger name="com.tesobe.obp.transport.spi.LegacyApi" level="trace"/>
  <logger name="com.tesobe.obp.transport.spi.LegacyResponder" level="trace"/>

  <logger name="com.tesobe.obp.transport.spi.SpeedTest" level="info"
    additivity="false">
    <appender-ref ref="terse"/>
  </logger>

  <root level="info">
    <appender-ref ref="console"/>
  </root>

</configuration>
